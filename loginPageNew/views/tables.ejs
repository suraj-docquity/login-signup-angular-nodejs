<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        List of Users
    </title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <center>

        <h3>Welcome <%=data.Name %></h3>

        <h4 class="tHead-format" style="margin-top: 5%;">List of all users</h4>

        <div class="table-data">
            <table class="table table-striped table-format" style="width: 20%;">
                <tr>
                    <th>S.N.</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>

                <% if(data.length!=0){ var i=1; data.forEach(function(data){ %>
                    <tr>
                        <td>
                            <%=i; %>
                        </td>
                        <td>
                            <%=data.Name %>
                        </td>
                        <td>
                            <%=data.Username %>
                        </td>
                        <td>
                            <%=data.Email %>
                        </td>
                        <td>
                            <%=data.Number %>
                        </td>
                        <!-- <td><a href="/users/edit/<%=data.id%>">Edit</a></td>
                        <td><a href="/users/delete/<%=data.id%>">Delete</a></td> -->
                    </tr>
                    <% i++; }) %>
                        <% } else{ %>
                            <tr>
                                <td colspan="7">No Data Found</td>
                            </tr>
                            <% } %>
            </table>
        </div>
    </center>
</body>

</html>